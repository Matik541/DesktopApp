<Window x:Class="WpfApp1.calcWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="calcWindow" Height="450" Width="800">
    <StackPanel>
        <TextBox x:Name="number1" TextAlignment="Center"/>
        <TextBox x:Name="number2" TextAlignment="Center"/>
        <UniformGrid Columns="4"  Margin="100 0">
            <Button Content="+" Margin="10" Click="add"/>
            <Button Content="-" Margin="10" Click="sub"/>
            <Button Content="*" Margin="10" Click="mull"/>
            <Button Content="/" Margin="10" Click="div"/>
            <Button Content="x ^ y" Margin="10" Click="pow"/>
            <Button Content="x √ y" Margin="10" Click="sqrt"/>
            <Button Content="x !" Margin="10" Click="fact"/>
            <Button Content="x % y" Margin="10" Click="mod"/>
        </UniformGrid>
        <TextBlock x:Name="result" TextAlignment="Center"/>
    </StackPanel>
</Window>
