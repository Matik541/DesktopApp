<Window x:Class="WpfApp1.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800">
    <StackPanel>
        <Menu>
            <MenuItem Header="_File">
                <Menu>
                    <MenuItem Header="Open">
                        <Menu>
                            <MenuItem Header="_Calculator" Click="open_calc"/>
                            <MenuItem Header="_Binding" Click="open_binding"/>
                            <MenuItem Header="_Layout" Click="open_layout"/>
                        </Menu>
                    </MenuItem>
                    <MenuItem Header="_Theme">
                        <Menu>
                            <MenuItem Header="Light/Dark" IsCheckable="true"/>
                        </Menu>
                    </MenuItem>
                </Menu>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="About _Program" Click="program_info"/>
                <MenuItem Header="About _Author" Click="author_info"/>
            </MenuItem>
        </Menu>
    </StackPanel>
</Window>
